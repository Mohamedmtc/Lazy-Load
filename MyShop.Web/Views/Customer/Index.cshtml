@model IEnumerable<MyShop.Domain.Models.Customer>

@{
    ViewData["Title"] = "All customers";
}

<h1>Customers</h1>

@foreach (var customer in Model)
{
    <div class="row mb-lg-5">
        <div class="col-lg-8">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Customer </span>
                <span class="badge badge-secondary badge-pill">@customer.Name</span>
            </h4>
            <img src="data:image/jpeg;base64,@System.Text.Encoding.Default.GetString(customer.ProfilePicture)" width="200" />
            <div>
                <p>@customer.ShippingAddress</p>
                <p>@customer.City</p>
                <p>@customer.PostalCode</p>
                <p>@customer.Country</p>
            </div>
            <a href="/Customer/Index/@customer.CustomerId">More details</a>
        </div>
    </div>
}